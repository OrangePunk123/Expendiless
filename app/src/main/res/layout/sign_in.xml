<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbackground"
    android:hapticFeedbackEnabled="false"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/signinName"
        android:layout_width="380dp"
        android:layout_height="44dp"
        android:backgroundTint="#ADA8B3"
        android:ems="10"
        android:hint="   Name"
        android:inputType="textPersonName"
        android:textColor="#706C6C"
        android:textColorHint="#A3A2A5"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintStart_toEndOf="@+id/imageView2"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.465" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="47dp"
        android:layout_height="44dp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.465"
        ads:srcCompat="@drawable/contacts" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="47dp"
        android:layout_height="44dp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.585"
        ads:srcCompat="@drawable/password" />

    <EditText
        android:id="@+id/signinPassword"
        android:layout_width="380dp"
        android:layout_height="44dp"
        android:backgroundTint="#ADA8B3"
        android:ems="10"
        android:hint="   PASSWORD"
        android:inputType="textPassword"
        android:textColor="#706C6C"
        android:textColorHint="#A3A2A5"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintStart_toEndOf="@+id/imageView3"
        ads:layout_constraintTop_toBottomOf="@+id/signinName"
        ads:layout_constraintVertical_bias="0.133" />

    <TextView
        android:id="@+id/text"
        android:layout_width="305dp"
        android:layout_height="63dp"
        android:gravity="center"
        android:text="Expend-i-less"
        android:textColor="@android:color/tab_indicator_text"
        android:textSize="50sp"
        android:textStyle="normal"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.849"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.269" />

    <Button
        android:id="@+id/login"
        android:layout_width="277dp"
        android:layout_height="46dp"
        android:background="@drawable/login"
        android:onClick="loginapp"
        android:text="LOGIN"
        android:textSize="18sp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/signinPassword"
        ads:layout_constraintVertical_bias="0.453" />

    <TextView
        android:id="@+id/signUP"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:backgroundTint="#7C7B7E"
        android:gravity="center"
        android:onClick="openActivitySignUp"
        android:text="New User?\nClick Here"
        android:textColor="#AEACB1"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.894" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="34dp"
        android:layout_height="25dp"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="99dp"
        ads:layout_constraintBottom_toBottomOf="@+id/text"
        ads:layout_constraintEnd_toEndOf="@+id/text"
        ads:layout_constraintHorizontal_bias="0.984"
        ads:layout_constraintStart_toStartOf="@+id/text"
        ads:layout_constraintTop_toTopOf="@+id/text"
        ads:layout_constraintVertical_bias="0.0"
        ads:srcCompat="@drawable/moneyg" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="79dp"
        android:layout_height="75dp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.048"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.16"
        ads:srcCompat="@drawable/wallet" />


</androidx.constraintlayout.widget.ConstraintLayout>